{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react-native",
    "baseUrl": "./src/",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@providers": ["providers/*"],
      "@screens/*": ["screens/*"],
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@theme/*": ["theme/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
